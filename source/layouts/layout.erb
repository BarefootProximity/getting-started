<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Getting Started</title>
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  
  <%= javascript_include_tag "libs/modernizr" %>
  <%= stylesheet_link_tag "screen" %>

  <!-- Typekit -->
  <script type="text/javascript" src="//use.typekit.net/ksh5vfs.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

</head>
<body class="<%= page_classes %>">
  <header class="site-header">
    <%= partial 'partials/nav' %>
  </header>
  <!-- /site-header -->
  
  <main class="main-content">
    <%= yield %>
  </main><!-- /main-content -->

  <footer class="site-footer" id="signup">
    <section class="footer-content">
      <div class="contact-exxon">
        <%= link_to "<i class='icon-globe'></i> Global Websites", '#' %>
        <%= link_to "<i class='icon-phone'></i> Contact Us", '#' %>
      </div><!-- /div -->
      <nav class="footer-nav">
        <ul class="nav site-nav">
          <% 5.times do %>
            <li><%= link_to 'Site Nav' %></li>
          <% end %>
        </ul>
        <ul class="nav global-nav">
          <% 5.times do %>
            <li><%= link_to 'Global Nav' %></li>
          <% end %>
        </ul>
      </nav> <!-- /footer-nav -->

    </section><!-- /footer-content -->
  </footer><!-- /site-footer -->
  
  <%= javascript_include_tag "public" %>


</body>
</html>
